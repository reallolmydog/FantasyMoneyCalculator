<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">
    <TextView
        android:text="Will round up or down closest based on inputs given."
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="300.0dp"
        android:layout_height="60.0dp"
        android:id="@+id/textView1" />
    <EditText
        android:inputType="none|numberDecimal"
        android:layout_width="300.0dp"
        android:layout_height="50.0dp"
        android:id="@+id/RealMoney"
        android:hint="Input money to calculate"
        android:layout_marginTop="10.0dp" 
        />
    <EditText
        android:inputType="none|numberDecimal"
        android:layout_width="300.0dp"
        android:layout_height="50.0dp"
        android:id="@+id/RealToGamePrice"
        android:hint="Price of bread: Â£"
        android:layout_marginTop="10.0dp" 
        />
    <EditText
        android:inputType="number"
        android:layout_width="300.0dp"
        android:layout_height="50.0dp"
        android:id="@+id/RealToGameCopperBread"
        android:hint="Ingame cost of bread in copper: "
        android:layout_marginTop="10.0dp" 
        />
    <TextView
        android:text="Copper total:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="300.0dp"
        android:layout_height="40.0dp"
        android:id="@+id/RealCopper"
        android:layout_marginTop="10.0dp" 
        />
    <TextView
        android:text="Silver total:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="300.0dp"
        android:layout_height="40.0dp"
        android:id="@+id/RealSilver"
        android:layout_marginTop="10.0dp" 
        />
    <TextView
        android:text="Gold total:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="300.0dp"
        android:layout_height="40.0dp"
        android:id="@+id/RealGold"
        android:layout_marginTop="10.0dp" 
        />
    <Button
        android:text="Calculate"
        android:layout_width="200.0dp"
        android:layout_height="60.0dp"
        android:id="@+id/RealCalc" 
        />
    <Button
        android:text="Ingame currency to currency calculator"
        android:layout_width="200.0dp"
        android:layout_height="60.0dp"
        android:id="@+id/FakeToReal" />
    <TextView
        android:text="@string/hyperlink"
        android:layout_width="300.0dp"
        android:layout_height="30.0dp"
        android:id="@+id/textView2" />
    <TextView
        android:text="@string/hyperlink2"
        android:layout_width="300.0dp"
        android:layout_height="30.0dp"
        android:id="@+id/textView3" />
</LinearLayout>
















































